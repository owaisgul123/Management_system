        <div class="row">
            <div class="col-12">
                <div class="card">
                    <div class="card-body">
                        <div style="display: flex; gap: 10px; margin-bottom: 15px;">
                        </div>
                        <div class="offcanvas offcanvas-end" tabindex="-1" id="offcanvasRight"
                            aria-labelledby="offcanvasRightLabel">
                            <div class="offcanvas-header">
                            </div>
                        </div>

                        <div class="container mt-4" style="max-width: 90%; margin: 0 auto;">
                            <h4 class="text-center mb-4">Account Edit - Checker</h4>
                            <hr class="border-3 border-dark">
                            <form>
                                <!-- Account Selection -->
                                <div class="row">
                                    <!-- Account Selection -->
                                    <div class="col-md-6 mb-3">
                                        <label class="form-label">Account:</label>
                                        <select class="form-control select2" data-toggle="select2">
                                            <option value="">Select Account</option>
                                            <option value="1">Account 1</option>
                                            <option value="2">Account 2</option>
                                        </select>
                                    </div>
                                
                                    <!-- Account No -->
                                    <div class="col-md-6 mb-3">
                                        <label class="form-label">Account No:</label>
                                        <input type="number" class="form-control">
                                    </div>
                                </div>
                                
                                <!-- Company Details -->
                                <div class="mb-3">
                                    <label class="form-label">Company*:</label>
                                    <select class="form-control select2" data-toggle="select2">
                                        <option value="">Select Company</option>
                                        <option value="1">Company 1</option>
                                        <option value="2">Company 2</option>
                                    </select>
                                </div>

                                <div class="row">
                                    <div class="col-md-6">
                                        <!-- Left Column -->
                                        <div class="mb-3">
                                            <label class="form-label">Legal Name*:</label>
                                            <input type="text" class="form-control" required>
                                        </div>

                                        <div class="mb-3">
                                            <label class="form-label">Entity*:</label>
                                            <select class="form-control select2" data-toggle="select2">
                                                <option value="">Select Entity</option>
                                                <option value="1">Entity 1</option>
                                                <option value="2">Entity 2</option>
                                            </select>
                                        </div>

                                        <div class="mb-3">
                                            <label class="form-label">Company Address 1*:</label>
                                            <input type="text" class="form-control" required>
                                        </div>

                                        <div class="mb-3">
                                            <label class="form-label">Company Address 3:</label>
                                            <input type="text" class="form-control">
                                        </div>

                                        <div class="mb-3">
                                            <label class="form-label">Company Phone 1:</label>
                                            <input type="tel" class="form-control">
                                        </div>

                                        <div class="mb-3">
                                            <label class="form-label">Mobile #*:</label>
                                            <input type="tel" class="form-control" required>
                                        </div>

                                        <div class="mb-3">
                                            <label class="form-label">Fax #:</label>
                                            <input type="tel" class="form-control">
                                        </div>

                                        <div class="mb-3">
                                            <label class="form-label">Contact Person*:</label>
                                            <input type="text" class="form-control" required>
                                        </div>

                                        <div class="mb-3">
                                            <label class="form-label">NTN #:</label>
                                            <input type="text" class="form-control">
                                        </div>

                                        <div class="mb-3">
                                            <label class="form-label">Authorized Signatory*:</label>
                                            <input type="text" class="form-control" required>
                                        </div>

                                        <div class="mb-3">
                                            <label class="form-label">Credit Limit*:</label>
                                            <input type="number" class="form-control" required>
                                        </div>
                                    </div>

                                    <div class="col-md-6">
                                        <!-- Right Column -->
                                        <div class="mb-3">
                                            <label class="form-label">Company Name on Card*:</label>
                                            <input type="text" class="form-control" required>
                                        </div>

                                        <div class="mb-3">
                                            <label class="form-label">Nature Of Business:</label>
                                            <input type="text" class="form-control">
                                        </div>

                                        <div class="mb-3">
                                            <label class="form-label">Company Address 2:</label>
                                            <input type="text" class="form-control">
                                        </div>

                                        <div class="mb-3">
                                            <label class="form-label">City*:</label>
                                            <select class="form-control select2" data-toggle="select2">
                                                <option value="">Select City</option>
                                                <option value="1">City 1</option>
                                                <option value="2">City 2</option>
                                            </select>
                                        </div>

                                        <div class="mb-3">
                                            <label class="form-label">Company Phone 2:</label>
                                            <input type="tel" class="form-control">
                                        </div>

                                        <div class="mb-3">
                                            <label class="form-label">Email Address*:</label>
                                            <input type="email" class="form-control" required>
                                        </div>

                                        <div class="mb-3">
                                            <label class="form-label">Contact Designation*:</label>
                                            <input type="text" class="form-control" required>
                                        </div>

                                        <div class="mb-3">
                                            <label class="form-label">Sales Tax Reg.:</label>
                                            <input type="text" class="form-control">
                                        </div>

                                        <div class="mb-3">
                                            <label class="form-label">Auth Desig.*:</label>
                                            <input type="text" class="form-control" required>
                                        </div>

                                        <div class="mb-3">
                                            <label class="form-label">Due Date*:</label>
                                            <input type="number" class="form-control" required>
                                        </div>

                                        <div class="mb-3">
                                            <label class="form-label">Service Charges*:</label>
                                            <input type="number" class="form-control" required>
                                        </div>

                                        <div class="mb-3">
                                            <label class="form-label">Billing Frequency*:</label>
                                            <div>
                                                <div class="form-check form-check-inline">
                                                    <input class="form-check-input" type="radio" name="billingFrequency"
                                                        id="monthly" value="monthly" checked>
                                                    <label class="form-check-label" for="monthly">Monthly</label>
                                                </div>
                                                <div class="form-check form-check-inline">
                                                    <input class="form-check-input" type="radio" name="billingFrequency"
                                                        id="fortnightly" value="fortnightly">
                                                    <label class="form-check-label"
                                                        for="fortnightly">Fortnightly</label>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>

                                <!-- Form Buttons -->
                                <div class="row mt-4">
                                    <div class="col-12 text-center">
                                        <button type="submit" class="btn btn-primary me-2">Submit</button>
                                        <button type="reset" class="btn btn-secondary">Reset</button>
                                    </div>
                                </div>
                            </form>
                        </div>
                    </div>

                </div> <!-- end card body-->
            </div> <!-- end card -->
        </div><!-- end col-->
        </div> <!-- end row-->


