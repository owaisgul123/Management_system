            <!-- Datatable Demo Aapp js -->
            <!-- <script src="assets/js/pages/demo.datatable-init.js"></script> -->
            <script>
                $("#basic-datepicker").flatpickr({
                    plugins: [new monthSelectPlugin({ shorthand: true, dateFormat: "Y-m", altFormat: "F Y" })]
                });

                flatpickr("#monthPicker", {
                    plugins: [
                        new monthSelectPlugin({
                            shorthand: true, // "01.24" format dikhayega
                            dateFormat: "m.y", // month.year format
                            altFormat: "F Y", // Full month name and year
                            theme: "dark" // Dark theme
                        })
                    ]
                });


                $(document).ready(() => {
                    $('.select3').select2({
                        width: '100%',
                        dropdownParent: $('#offcanvasRight')

                    })
                })


                var a = $("#users_table").DataTable({
                    lengthChange: !1,
                    buttons: ["copy", "print", "excel", "csv", "pdf"],
                    language: {
                        paginate:
                        {
                            previous: "<i class='ri-arrow-left-s-line'>",
                            next: "<i class='ri-arrow-right-s-line'>"
                        }
                    },
                    drawCallback: function () {
                        $(".dataTables_paginate > .pagination").addClass("pagination-rounded")
                    }
                });
                a.buttons().container().appendTo("#users_table_wrapper .col-md-6:eq(0)");
            </script>